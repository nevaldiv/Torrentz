<!DOCTYPE html>
<html>
<head>
  <title>Mr. Wyndmere ND</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
</head>
<body id="bodeh">

  <%= render "shared/navbar" %>
  <nav>
    <% if logged_in? %>
      <div class="container">
        <div class="field col-md-6 col-md-offset-3">
          <h5>Welcome, <%= current_user.username %><h5>
          <%= link_to "New Thread", new_post_path, class: "btn btn-block btn-primary" %>
        </div>
      </div>
    <% end %>

      <div class="jumbotron">
        <h1>Oh hello, wont you stay?</h1>
        <p class="lead">Stories from the other side of the woods...</p>
        <%= link_to "New Post", new_post_path, class: "btn btn-lg btn-success" %>
      </div>


  </nav>
<div id="container">
<%= yield %>
</div>
</body>
</html>
