<h4>Add a blog post!</h4>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :subtitle %>
  <%= f.text_field :subtitle %>
  <br>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <br>
  <%= f.submit "Blog!" %>
<% end %>

<ul>
<% @post.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>
